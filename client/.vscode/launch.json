{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "firefox",
      "reAttach": true,
      "request": "launch",
      "preLaunchTask": "npm: start",
      "webRoot": "${workspaceFolder}/index.html",
      "addonPath": "${workspaceFolder}",
      "url": "http://localhost:4200/",
      "firefoxExecutable": "/Applications/Firefox Developer Edition.app"

    },
    {
      "name": "ng test",
      "type": "firefox",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    },
    {
      "type": "node-terminal",
      "name": "Run Script: serve:ssr:client (client)",
      "request": "launch",
      "command": "npm run serve:ssr:client", 
      "cwd": "${workspaceFolder}/client"
    }   

    
  ]
}
